<style>
  .key {
    text-transform: uppercase;
    font-weight: 500;
  } 
  .card-text{
    font-weight: 400;
    color: black;
  }
</style>
<h3 class="mb-4">View Orders</h3>
<div class="table-responsive">
  <table class="table text-nowrap mb-0">
    <!-- Table headers here -->
    <tbody>
      <% allorders.forEach((order) => { %> <% order.items.forEach((item) => { %>

      <!-- Card for each order -->
      <tr>
        <td colspan="8" class="border-0">
          <div class="card mb-4">
            <div class="row g-0">
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title" style="text-align: start;">Order #<%= order.orderNumber %></h5>
                  <div
                    class="d-md-flex justify-content-between align-items-center"
                  >
                    <p class="card-text mb-md-0"><%= item.product.name %></p>
                    <p class="card-text mb-md-0">Qty: <%= item.quantity %></p>
                    <p class="card-text mb-0">
                      <%= order.date.toDateString() %>
                    </p>
                  </div>
                  <div
                    class="d-md-flex justify-content-between align-items-center mt-2"
                  >
                    <p class="card-text mb-0"> Shipping Addres :
                      <%= order.shippingAddress.address %>, <%=
                      order.shippingAddress.state %>, <%=
                      order.shippingAddress.country %>
                    </p>
                    <p class="card-text mb-0">
                      User: <%= order.shippingAddress.fname %> <%=
                      order.shippingAddress.lname %>
                    </p>
                    
                  </div>
                  <div
                    class="d-md-flex justify-content-between align-items-center mt-2"
                  >
                    <p class="card-text mb-0">
                      Payment Method: <%= order.paymentMethod %>
                    </p>
                    <p class="card-text mb-0">
                      <span
                        class="badge rounded-pill <%= order.status === 'cancelled' ? 'bg-danger' : 'bg-info' %>"
                      >
                        <%= order.status %>
                      </span>
                    </p>
                    
                  </div>
                </div>
              </div>
              <div
                class="col-md-4 d-flex align-items-center justify-content-center"
              >
                <img
                  src="/<%= item.product.image %>"
                  alt="<%= item.product.name %>"
                  class="img-thumbnail"
                  style="max-width: 100px"
                />
              </div>
            </div>
          </div>
        </td>
      </tr>
      <% }); %> <% }); %>
    </tbody>
  </table>
</div>
