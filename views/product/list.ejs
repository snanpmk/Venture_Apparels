<style>
  .all-products {
    font-weight: bold;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }
  .product-name {
    text-transform: uppercase;
    text-align: center;
    font-weight: bolder;
    font-family: sans-serif;
  }

  .delete-btn {
    color: red;
  }
  .activate-btn {
    color: green;
  }
  .key {
    font-weight: 500;
    color: black;
  }
</style>

<h3 class="all-products">ALL PRODUCTS</h3>
<div class="row">
  <% products.forEach(product => { %>
  <div class="col-sm-6 col-xl-3">
    <div class="card overflow-hidden rounded-2">
      <div class="position-relative">
        <a href="javascript:void(0)">
          <img
            src="/<%= product.image %>"
            class="card-img-top rounded-0"
            alt="..."
          />
        </a>
      </div>
      <div class="card-body pt-3 p-4">
        <h6 class="fw-semibold fs-4" style="text-align: center;color: black;">
          <%= product.name %>
        </h6>
        <div style="border-block: 1px; border-radius: 1rem">
          <div class="d-flex align-items-center justify-content-between">
            <p><strong class="key">Price :</strong> <%= product.price %></p>
            <p><strong class="key">Stock :</strong> <%= product.stock %></p>
          </div>

          <p>
            <strong class="key">Category :</strong>
            <%= product.category.name %>
            <!-- Display the category name -->
          </p>

          <div class="d-flex" style="justify-content: space-between">
            <% if (!product.deleted) { %>
            <a href="/product/edit/<%= product.id %>" class="edit-btn">Edit</a>
            <a href="/product/deactivate/<%= product.id %>" class="delete-btn"
              >Delete</a
            >
            <% } else { %>
            <a href="/product/activate/<%= product.id %>" class="activate-btn"
              >Activate</a
            >
            <% } %>
            <p>
              <% if (!product.deleted) { %>
              <span class="badge bg-success rounded-pill">Active</span>
              <% } else { %>
              <span class="badge bg-danger rounded-pill">Deactivated</span>

              <% } %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% }); %>
</div>
