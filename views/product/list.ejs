<!-- products.ejs -->

<h1>Product List</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><img src="/<%= product.image %>" alt="Product Image" height="100"></td>
      </tr>
    <% }); %>
  </tbody>
</table>
