        <!-- body  -->
        <h4 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
            ADD PRODUCT
          </h4>
          <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <p style="color: red"><%= errorMessage %></p>
          <% } %>
          
          <style>
            .form-group {
              margin-bottom: 20px;
            }
          </style>
          
          <div class="container mt-4">
            <form
              method="POST"
              enctype="multipart/form-data"
              action="/product/add"
              onsubmit="return validateForm()"
            >
              <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required />
              </div>
              <div class="form-group">
                <label for="price">Price:</label>
                <input
                  type="number"
                  class="form-control"
                  id="price"
                  name="price"
                  required
                  oninput="validatePrice()"
                />
                <p id="priceError" style="color: red; display: none">
                  Price should not be less than 0.
                </p>
              </div>
              <div class="form-group">
                <label for="stock">Stock:</label>
                <input
                  type="number"
                  class="form-control"
                  id="stock"
                  name="stock"
                  required
                  oninput="validateStock()"
                />
                <p id="stockError" style="color: red; display: none">
                  Stock should not be less than 0.
                </p>
              </div>
              <div class="form-group">
                <label for="description">Description:</label>
                <textarea
                  class="form-control"
                  id="description"
                  name="description"
                  required
                ></textarea>
              </div>
              <div class="form-group">
                <label for="category">Category:</label>
                <select
                  class="form-control"
                  id="category"
                  name="category"
                  required
                  style="color: black"
                >
                  <option value="" selected disabled>Choose a category</option>
                  <% categories.forEach(category=>{ %>
                  <option value="<%= category._id %>"><%= category.name %></option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="image">Image:</label>
                <input
                  type="file"
                  class="form-control-file"
                  id="image"
                  name="image"
                  accept="image/*"
                  required
                  aria-label="Image"
                />
              </div>
              <div>
                <button
                  type="submit"
                  class="btn btn-success"
                  style="color: white; border-radius: 15px"
                >
                  Add Product
                </button>
              </div>
            </form>
          </div>
          
          <script>
            function validatePrice() {
              var priceInput = document.getElementById("price");
              var priceError = document.getElementById("priceError");
          
              if (priceInput.value < 0) {
                priceError.style.display = "block";
              } else {
                priceError.style.display = "none";
              }
            }
          
            function validateStock() {
              var stockInput = document.getElementById("stock");
              var stockError = document.getElementById("stockError");
          
              if (stockInput.value < 0) {
                stockError.style.display = "block";
              } else {
                stockError.style.display = "none";
              }
            }
          
            function validateForm() {
              var priceInput = document.getElementById("price");
              var stockInput = document.getElementById("stock");
          
              if (priceInput.value < 0 || stockInput.value < 0) {
                return false;
              }
          
              return true;
            }
          </script>
          
