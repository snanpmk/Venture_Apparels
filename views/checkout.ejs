        } else {
          throw new Error("Error: " + response.status);
        }
      })
      .catch((error) => {
        console.error(error);
        // Handle any errors that occurred during the request
      });
  }
  document.addEventListener("DOMContentLoaded", function () {
    const removeAddressButtons = document.querySelectorAll(
      ".remove-address-button"
    );

    removeAddressButtons.forEach(function (removeAddressButton) {
      removeAddressButton.addEventListener("click", showDeleteConfirmation);
    });

    function showDeleteConfirmation(event) {
      const addressId = event.target.dataset.addressId;

      Swal.fire({
        title: "Are you sure?",
        text: "Once deleted, you will not be able to recover this address!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Delete",
        cancelButtonText: "Cancel",
        dangerMode: true,
      }).then((result) => {
        if (result.isConfirmed) {
          // User clicked the confirmation button
          deleteAddress(addressId);
        } else {
          // User clicked the cancel button
          // Do nothing or handle the cancellation
        }
      });
    }
  });
</script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Get a reference to the "Complete Order" button
    const completeOrderButton = document.getElementById("completeOrderButton");

    // Add an event listener to the button
    completeOrderButton.addEventListener("click", () => {
      // Retrieve the selected payment method
      const cashOnDeliveryRadio = document.getElementById("cashOnDelivery");
      const creditCardRadio = document.getElementById("creditCard");
      const bankTransferRadio = document.getElementById("bankTransfer");

      let paymentMethod;
      if (cashOnDeliveryRadio.checked) {
        paymentMethod = cashOnDeliveryRadio.value;
      } else if (creditCardRadio.checked) {
        paymentMethod = creditCardRadio.value;
      } else if (bankTransferRadio.checked) {
        paymentMethod = bankTransferRadio.value;
      }

      // Retrieve the selected address
      const selectedAddressRadio = document.querySelector(
        'input[name="card-selection"]:checked'
      );

      if (selectedAddressRadio && paymentMethod) {
        const selectedAddress = JSON.parse(
          selectedAddressRadio.dataset.address
        );

        const data = {
          paymentMethod: paymentMethod,
          address: selectedAddress,
        };

        console.log(data);

        // Fetch request to the server
        fetch("/process-order", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        })
          .then(async (response) => {
            const res = await response.json();
            console.log(res);
            if (res.success) {
              const orderId = res.orderId;
              console.log("Order placed successfully");
              window.location.href = `/order-success/${orderId}`;
            } else {
              // Handle the error response from the server
              console.error("Error:", response.statusText);
              // Show an error message or perform any necessary actions
            }
          })
