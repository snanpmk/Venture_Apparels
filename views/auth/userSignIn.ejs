<!DOCTYPE html>
<html>
  <head>
    <title>Create Account</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="\stylesheets\userSignup.css" />
  </head>
  <body>
    <section>
      <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-md-9 col-lg-6 col-xl-5">
            <img
              src="/images/background/signup (2).jpg"
              class="img-fluid"
              alt="Sample image"
              width="600"
              style="border-radius: 25px"
            />
          </div>
          <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <!-- form for account creation -->
            <form
              method="post"
              action="/signup"
              onsubmit="return validateForm()"
            >
              <div class="form-group">
                <label class="form-label" for="name">Your name</label>
                <input
                  class="form-control"
                  type="text"
                  id="name"
                  name="name"
                  placeholder="First and last name"
                  required
                />
                <p id="nameValidMessage" style="color: red"></p>

                <label class="form-label" for="phoneNumber">Phone Number</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <select
                      class="custom-select"
                      id="countryCode"
                      name="countryCode"
                    >
                      <option value="+91">+91</option>
                      <option value="+1">+1</option>
                      <option value="+44">+44</option>
                      <option value="+86">+86</option>
                      <option value="+81">+81</option>
                    </select>
                  </div>
                  <input
                    class="form-control"
                    type="text"
                    id="phoneNumber"
                    name="phoneNumber"
                    placeholder="Mobile number"
                    required
                  />
                </div>

                <p id="phoneNumberValidMessage" style="color: red"></p>

                <label class="form-label" for="email">Email</label>
                <input
                  class="form-control"
                  id="email"
                  name="email"
                  type="email"
                  required
                  placeholder="Enter your email"
                />
                <p id="emailValidMessage" style="color: red"></p>

                <label class="form-label" for="password">Password</label>
                <input
                  class="form-control"
                  type="password"
                  id="password"
                  name="password"
                  required
                  placeholder="Enter your password"
                />
                <p
                  id="passwordStrengthMessage"
                  style="width: 20rem; color: red"
                ></p>

                <label class="form-label" for="confirmPassword"
                  >Confirm Password</label
                >
                <input
                  class="form-control"
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  minlength="6"
                  required
                  placeholder="Confirm your password"
                />

                <p id="passwordMatchMessage" style="color: red; display: none">
                  Passwords do not match.
                </p>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <br />
            <div id="errorContainer">
              <p id="errorMessage" style="display: none; color: red"></p>
            </div>
            <div class="mt-4">
              <p>
                Already have an account?
                <a href="/login" style="color: blue">Sign in</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="/javascripts/signup.js"></script>
  </body>
</html>
