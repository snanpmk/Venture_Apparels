<!DOCTYPE html>
<html>
  <head>
    <title>Create Account</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="\stylesheets\userSignup.css" />
    <style>
      /* Add custom CSS for center alignment */
      
      .btn-primary {
        color: white;
        text-decoration: none;
      }
      a{
        color: white;
      }
      a:hover{
        color: white;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <section>
      <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-md-9 col-lg-6 col-xl-5">
            <img
              src="/images/background/login (2).jpg"
              class="img-fluid"
              alt="Sample image"
              width="500"
              style="border-radius: 25px"
            />
          </div>
          <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <div class="container-fluid">
              <!-- form for account creation -->
              <form method="post" class="" action="/getotp">
                <div class="form-group">
                  
                  <label for="phoneInput">Phone Number</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <select
                      class="custom-select"
                      id="countryCode"
                      name="countryCode"
                    >
                    <option value="+91">+91</option>
                    <option value="+1">+1</option>
                    <option value="+44">+44</option>
                    <option value="+86">+86</option>
                    <option value="+81">+81</option>
                      <!-- Add more country codes and names as needed -->
                    </select>
                  </div>
                  <input
                    type="tel"
                    class="form-control"
                    id="phoneInput"
                    placeholder="Phone Number"
                    name="phoneNumber"
                  />
                </div>
              </div>
              <button type="submit" class="btn btn-primary">Get OTP</button>
                 
                </div>
              
              
              </form>

              <% if (typeof message !== 'undefined' && message) { %>
              <p style="color: red"><%= message %></p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  
  </body>
</html>
